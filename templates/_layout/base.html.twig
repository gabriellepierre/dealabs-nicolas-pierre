<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}
            Dealabs ⇒ {% if titre is defined %} {{ titre }} {% endif %} - dealabs.com
        {% endblock %}</title>
        
        <link rel="icon" href="">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {% if form is defined %}
			{% form_theme form 'bootstrap_5_layout.html.twig' %}
		{% endif %}
    </head>

    <body>
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="h-100">
                    <a class="navbar-brand" href="{{ path('home') }}">
                        <img class="h-100" src="/images/dealabs-nav-logo.png" alt="Dealabs">
                    </a>
                </div>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('bonPlan_index') }}">Bons plans</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('codePromo_index') }}">Code promo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Gratuit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Discussions</a>
                        </li>

                        {# <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Menu
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li> #}

                        <li>
                            <div class="input-group">
                                <span class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-search"></i></div>
                                </span>
                                <input class="form-control" type="search" placeholder="Recherche...">
                            </div>
                        </li>

                        
                        {% if app.user %}
                            <li class="nav-item">
                                <a href="{{ path('security_logout') }}" class="btn btn-secondary">
                                    <i class="bi bi-box-arrow-right"></i>
                                    Déconnexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('user_account') }}" class="btn btn-secondary">
                                    <i class="bi bi-person"></i>
                                    Mon compte
                                </a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a href="{{ path('security_login') }}" class="btn btn-secondary">
                                    <i class="bi bi-person"></i>
                                    Connexion
                                </a>
                            </li>
                        {% endif %}
                        </li>

                        <li class="nav-item">
                            <a href="{{ path('bonPlan_add') }}" class="btn btn-info">
                                <i class="bi bi-plus-lg"></i> Poster...
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        {% endblock %}



        {% block subnavbar %}
            <nav class="border border-bottom">
                <ul class="d-flex flex-row navbar-nav">
                    {% if subnavbarDeal is defined %}
                        {{ include('_layout/_sub-deal.html.twig') }}
                    {% elseif subnavbarAccount is defined %}
                        {{ include('_layout/_sub-account.html.twig') }}
                    {% elseif subnavbarCodePromo is defined %}
                        {{ include('_layout/_sub-codePromo.html.twig') }}
                    {% elseif subnavbarBonPlan is defined %}
                        {{ include('_layout/_sub-bonPlan.html.twig') }}
                    {% endif %}
                </ul>
            </nav>
        {% endblock %}



        {% block body %}{% endblock %}
    </body>
</html>
