<div class="container">
    <div class="row">
        {# <a href="#"> #}
            <!-- Item-->
            <div class="d-flex justify-content-start my-2 p-3 border">
                <div>
                    {# {{ deal.images | first }} #}
                    <img class="rounded-2" src="https://upload.wikimedia.org/wikipedia/commons/1/1b/Square_200x200.png"/>
                </div>
                
                <div class="p-2 w-100">
                    <div class="d-flex justify-content-between pb-2">
                        <div class="d-inline-flex border border-secondary rounded">
                            <button type="button" class="btn btn-outline-primary btn-sm border-0">-</button>
                            <div class="p-1">
                                <span class="text-danger"><strong>{{ deal.degreAttractivite }}°</strong></span>
                            </div>
                            <button type="button" class="btn btn-outline-danger btn-sm border-0">+</button>
                        </div>
                        <div>
                            {% if deal.dateExpiration is not null %}
                                <span class="text-secondary"><i class="bi bi-hourglass-bottom"></i> Expire le {{ deal.dateExpiration|date("d/m/Y") }}</span>
                            {% endif %}
                            <span class="text-secondary"><i class="bi bi-activity"></i> Posté le {{ deal.datePublication|date("d M") }}</span>
                        </div>
                    </div>

                    <div>
                        <div class="pb-2">
                            <h5 class="mb-0"><strong>{{ deal.titre }}</strong></h5>
                            <span class="text-secondary">Code promo <a class="text-info" href="#">[...]</a></span>
                        </div>

                        <div class="row pb-2">
                            <div class="col-md-6">
                                <a class="btn btn-info w-100 text-light" href="#" role="button">Profiter du code <i class="bi bi-box-arrow-up-right"></i></a>
                            </div>
                            <div class="col-md-6">
                                <a class="btn btn-light w-100 border" href="#" role="button">[...] <i class="bi bi-box-arrow-up-right"></i></a>
                            </div>
                        </div>

                        <div class="pb-2">
                            {{ deal.description }}
                        </div>
                    </div>
                    <div>
                        <span><strong>{{ deal.postePar }}</strong></span>
                        {# RAJOUTER LES 3 BOUTONS #}
                    </div>
                </div>
            </div>
        {# </a> #}
    </div>
</div>