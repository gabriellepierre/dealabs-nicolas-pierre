{% extends '_layout/base.html.twig' %}

{% set titre = "Ajouter un {{ entityName }}" %}

{% block body %}
	{{ form_start(form) }}
    <div class="d-flex flex-row mx-4 justify-content-center">
        <div class="card bg-white p-3 w-75">
            <div class="form-error">
                {{ form_errors(form)}}
            </div>

            <div class="detail-box">
                <div class="row d-flex justify-content-between align-items-end">
                    <div class="col-md-6">
                        <h2 class="h3">Poster un nouveau deal</h1>
                    </div>

                    <div class="col-md-6 justify-content-end">

                        {% if entityName == "bon plan" %}
                            <a href="{{ path('codePromo_add') }}" class="text-info">Ou poster un code promo</a>
                        {% elseif entityName == "code promo" %}
                            <a href="{{ path('bonPlan_add') }}" class="text-info">Ou poster un deal</a>
                        {% endif %}
                    </div>
                </div>

                <div>
                    <div class="border-bottom">
                        {{ form_row(form.lien, { "label": "Lien du deal (Facultatif)" }) }}
                    </div>

                    <h3 class="h4">Description</h2>
                    <div class="mb-4 form-group">
                        {% if entityName == "bon plan" %}
                            <div class="d-flex flex-row gap-3">
                                <div class="w-50 mr-1">
                                    {{ form_row(form.prixReduction, { "label": "Prix (Facultatif)" }) }}
                                </div>
                                <div class="w-50 mr-1 ml-2">
                                    {{ form_row(form.prixHabituel, { "label": "Prix habituel (Facultatif)" }) }}
                                </div>
                            </div>
                            <div class="w-50 mr-1">
                                {{ form_row(form.fraisLivraison, { "label": "Frais de port (Facultatif)" }) }}
                            </div>
                        {% elseif entityName == "code promo" %}
                            {{ form_row(form.typeCodePromo, { "label": "Type de r√©duction (Facultatif)" }) }}
                        {% endif %}
                    </div>


                    
                    {{ form_row(form.codePromo, { "label": "Code promo (Facultatif)" }) }}
                    {{ form_row(form.titre, { "label": "Titre" }) }}
                    {{ form_row(form.description, { "label": "Description" }) }}

                    <!-- {{ form_row(form.categories, { "label": "Groupes" }) }} -->

                    <button class="btn btn-primary" type="submit">Valider</button>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}	
{% endblock %}
